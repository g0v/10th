[data-name=authpanel]
  .auth-base
    width: 700px
    height: 580px
  .auth-info, .auth-form
    width: 50%

@media (max-width:768px)
  [data-name=authpanel]
    .ldcv > .base
      width: 100%
      height: 100%
      max-width: 100%
      max-height: 100%
      display: block
      .inner
        border: 0
        box-shadow: none
        border-radius: 0
    .auth-base
      width: 100%
      height: 100%
    .auth-info
      display: none
    .auth-form
      width: 100%
