extends /base.pug
block prehead
  -
    var meta = {
      url: "https://10th.g0v.tw",
      title: "零宇宙大爆炸 - 零時政府 g0v 十週年生日派對於台北的社會創新實驗中心",
      description: "零時政府十週年了！「零宇宙大爆炸」將以生日派對的形式，舉辦在台北的社會創新實驗中心，透過短講、表演、開放工作坊、闖關遊戲、和源力不絕的生日蛋糕與美食，我們邀請「沒有人」化身為「零時空旅人」一同來回顧 g0v 的第一個十年，並且想像第二個、第三個、第 n 個十年！",
      thumbnail: "https://10th.g0v.tw/assets/img/thumb.png",
      thumb: {
        type: "image/png",
        width: "1200",
        height: "630"
      }
    };
block head
  style(type="text/css"): :stylus
    body
      background: url(/assets/img/star.svg) right bottom fixed no-repeat;
      background-size: 350px
    .sect
      margin-bottom: 4em
    p
      font-weight: 200
    .emoji
      cursor: pointer
      border: 1px solid #dddedf
      border-radius: .5em
      box-shadow: 0 1px 3px rgba(0,0,0,.1)
      transition: background .15s ease-in-out
    .emoji:hover
      background: #edeeef

    .emoji .icon
      padding: .25em 1em
      div
        width: 40px
        height: 40px
        background-position: center center
        background-repeat: no-repeat
        background-size: 100% 100%
    .emoji .count
      flex: 1 0 auto
      justify-content: end
      border-right: 1px solid #dddedf
      padding: .25em 1em
      font-weight: 700
      font-size: 1.66em
      display: flex
      align-items: center
    .links .entry
      display: flex
      align-items: center
    .links i
      margin-right: .5em
      color: #06b
      font-size: .75em
    .links .i-unlink
      color: #b60
    .btn-hero
      color: black
      background: white
      border-color: black
    .hero
      height: 100vh
      font-size: 16px
      background-size: contain
      background-color: #202123
      background-image: url(/assets/img/visual-animated.svg)
      background-repeat: no-repeat
      background-position: left center
      .btn
        font-size: 1em
    .hero-inner
      width: 50%
      margin-left: 43%
      background: rgba(32,33,35,.5)
      padding: 10px
      border-radius: 1em
      h1
        transform: rotate(-4deg) translate(0,-16px)
        display: inline-block

      .btns
        transform: rotate(4deg) translate(0,16px)
      .btn-join
        transform: rotate(4deg) translate(0,4px)
    .footer
      background: rgba(255,255,255,.7)

    @media (max-width:1024px) {
      .hero {
        background-size: cover
      }
      .hero-inner {
        text-align: center
        background: rgba(32,33,35,.85)
        padding: 1.5em
        box-shadow: 0 5px 10px rgba(0,0,0,.3)
        left: 0;
        right: 0;
        width: 90%;
        margin: auto;
        h1 { transform: none; display: block }
        .btns { transform: none }
        .btn-join { transform: none }
      }
    }
    .btn-list {
      display: flex
      flex-wrap: wrap
      gap: .75em
    }

    @keyframes vivid {
      0% { background-position: 0px 0 }
      100% { background-position: 300px 0}
    }
    .vivid
      color: #fff
      background: #40E0D0
      background-image: linear-gradient(90deg, #3b7, #16d, #3b7)
      background-size: 300px 100px
      animation: vivid 1s linear infinite
      text-shadow: 0 0 3px rgba(255,255,0,.8)
    .vivid:hover
      color: #fff


block body
  .hero.position-relative.w-100.d-flex.align-items-center.justify-content-left
