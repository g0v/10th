      font-size: 16px
      background-size: contain
      background-color: #202123
      background-image: url(/assets/img/visual-animated.svg)
      background-repeat: no-repeat
      background-position: left center
      .btn
        font-size: 1em
    .hero-inner
      width: 50%
      margin-left: 43%
      background: rgba(32,33,35,.5)
      padding: 10px
      border-radius: 1em
      h1
        transform: rotate(-4deg)
        display: inline-block

      .btns
        transform: rotate(4deg) translate(0,16px)
    .footer
      background: rgba(255,255,255,.7)

    @media (max-width:1024px) {
      .hero {
        background-size: cover
      }
      .hero-inner {
        text-align: center
        background: rgba(32,33,35,.85)
        padding: 1.5em
        box-shadow: 0 5px 10px rgba(0,0,0,.3)
        left: 0;
        right: 0;
        width: 90%;
        margin: auto;
        h1 { transform: none; display: block }
